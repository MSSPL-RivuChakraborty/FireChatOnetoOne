<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5_unit">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_account_circle_black_36dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <EditText
        android:id="@+id/edit_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:layout_marginLeft="3dp"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/profile_image"/>

    <TextView
        android:id="@+id/textView_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:layout_below="@+id/edit_group_name"
        android:layout_alignStart="@+id/edit_group_name" />

    <ImageView
        android:id="@+id/image_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_chat"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
